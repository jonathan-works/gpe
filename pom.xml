        <dependency>
          <groupId>org.javassist</groupId>
          <artifactId>javassist</artifactId>
          <version>3.18.1-GA</version>
          <scope>provided</scope>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>jboss-eap</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.jboss.as</groupId>
          <artifactId>jboss-as-arquillian-container-managed</artifactId>
          <scope>test</scope>
        </dependency>
      </dependencies>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-failsafe-plugin</artifactId>
            <version>2.16</version>
            <configuration>
              <systemPropertyVariables>
                <arquillian.launch>jbossas-managed</arquillian.launch>
                <jboss_management_port>9999</jboss_management_port>
                <jboss_port_offset>0</jboss_port_offset>
              </systemPropertyVariables>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-clean-plugin</artifactId>
            <version>2.5</version>
            <executions>
              <execution>
                <id>clear-deployments</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>clean</goal>
                </goals>
                <configuration>
                  <excludeDefaultDirectories>true</excludeDefaultDirectories>
                  <filesets>
                    <fileset>
                      <directory>${env.JBOSS_HOME}/standalone/deployments</directory>
                      <includes>
                        <include>**/*</include>
                      </includes>
                    </fileset>
                    <fileset>
                      <directory>${env.JBOSS_HOME}/standalone/tmp</directory>
                      <includes>
                        <include>**/*</include>
                      </includes>
                    </fileset>
                    <fileset>
                      <directory>${env.JBOSS_HOME}/standalone/data</directory>
                      <includes>
                        <include>**/*</include>
                      </includes>
                    </fileset>
                  </filesets>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
