    <snapshotRepository>
      <id>infox-snapshots</id>
      <name>Infox Snapshots</name>
      <url>http://ci.infox.intranet:8081/nexus/content/repositories/infox-snapshots/</url>
    </snapshotRepository>
  </distributionManagement>
