<?xml version="1.0" encoding="UTF-8"?>
<epp-configuration>
	
	<application-server>
		<jboss-eap>
			<epp.datasource.name>java:jboss/datasources/EPADataSource</epp.datasource.name>
    		<epp.datasourcebin.name>java:jboss/datasources/EPADataSourceBin</epp.datasourcebin.name>
    		<hibernate.cache.region.class>org.jboss.as.jpa.hibernate4.infinispan.InfinispanRegionFactory</hibernate.cache.region.class>
    		<epp.mail.session>java:jboss/mail/${epp.name}</epp.mail.session>
		</jboss-eap>
		
		<tomee>
			<epp.datasource.name>openejb:Resource/EPADataSource</epp.datasource.name>
			<epp.datasource.bin.name>openejb:Resource/EPADataSourceBin</epp.datasource.bin.name>
			<hibernate.cache.region.class>org.hibernate.cache.infinispan.InfinispanRegionFactory</hibernate.cache.region.class>
			<epp.mail.session>openejb:Resource/mail/${epp.name}</epp.mail.session>
		</tomee>
	</application-server>
	
	<database>
	
		<postgresql>
			<hibernate.dialect>br.com.infox.hibernate.postgres.dialect.InfoxPostgreSQLDialect</hibernate.dialect>
		    <quartz.delegate>org.quartz.impl.jdbcjobstore.PostgreSQLDelegate</quartz.delegate>
		    <database.type>PostgreSQL</database.type>
		</postgresql>
		
		<mssql>
			<hibernate.dialect>br.com.infox.hibernate.sqlserver.dialect.InfoxSQLServer2012Dialect</hibernate.dialect>
	        <quartz.delegate>org.quartz.impl.jdbcjobstore.MSSQLDelegate</quartz.delegate>
	        <database.type>SQLServer</database.type>
		</mssql>
		
		<oracle>
			<hibernate.dialect>br.com.infox.hibernate.oracle.dialect.InfoxOracleDialect</hibernate.dialect>
	        <quartz.delegate>org.quartz.impl.jdbcjobstore.oracle.OracleDelegate</quartz.delegate>
	        <database.type>Oracle</database.type>
	        <optional.oracle.module>false</optional.oracle.module>
		</oracle>
	
	</database>
	
</epp-configuration>




