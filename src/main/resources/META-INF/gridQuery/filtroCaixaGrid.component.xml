<components xmlns="http://jboss.com/products/seam/components" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jboss.com/products/seam/core http://jboss.com/products/seam/core-2.2.xsd                   http://jboss.com/products/seam/security http://jboss.com/products/seam/security-2.2.xsd                  http://jboss.com/products/seam/components http://jboss.com/products/seam/components-2.2.xsd">	

<!-- $Id: filtroCaixaGrid.component.xml 704 2010-08-12 23:21:10Z jplacerda $ -->


	<component name="filtroCaixaGrid" class="br.com.itx.component.grid.GridQuery">
		<property name="ejbql">select o from Caixa o</property>
		<property name="maxResults">16</property>
		<property name="gridId">caixaFiltro</property>
		<property name="key">caixa</property>
		<property name="restrictions">
			<value>o.tarefa = #{filtroCaixaSearch.tarefa}</value>
			<value>(o.tarefaAnterior = #{filtroCaixaSearch.tarefaAnterior} OR
				    o.tarefaAnterior is null)</value>
		</property>
	</component>

</components>
