<components xmlns="http://www.jboss.org/schema/seam/components" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.jboss.org/schema/seam/core http://www.jboss.org/schema/seam/core-2.3.xsd                   http://www.jboss.org/schema/seam/security http://www.jboss.org/schema/seam/security-2.3.xsd                  http://www.jboss.org/schema/seam/components http://www.jboss.org/schema/seam/components-2.3.xsd">	

<!-- $Id: tipoModeloDocumentoGrid.component.xml 704 2010-08-12 23:21:10Z jplacerda $ -->


	<component name="tipoModeloDocumentoGrid" class="br.com.itx.component.grid.GridQuery">
		<property name="ejbql">select o from TipoModeloDocumento o</property>
		<property name="maxResults">16</property>
		<property name="gridId">tipoModeloDocumento</property>
		<property name="key">idTipoModeloDocumento</property>
		<property name="columns">
			<value>tipoModeloDocumento</value>
			<value>grupoModeloDocumento : {properties : {order: grupoModeloDocumento}}</value>			
			<value>abreviacao</value>			
			<value>ativo: { valueType: ativo }</value>	
		</property>
		<property name="restrictions">
			<value>grupoModeloDocumento = #{grupoModeloDocumentoSuggest.instance}</value>
			<value>grupoModeloDocumento.idGrupoModeloDocumento = #{grupoModeloDocumentoHome.id}</value>
			<value>lower(tipoModeloDocumento) like concat('%',lower(#{tipoModeloDocumentoSearch.tipoModeloDocumento}),'%')</value>
			<value>lower(abreviacao) like concat(lower(#{tipoModeloDocumentoSearch.abreviacao}),'%')</value>
			<value>ativo = #{tipoModeloDocumentoSearch.ativo}</value>
			<value>o not in (
						select v.tipoModeloDocumento from VariavelTipoModelo v
						where v.variavel = #{variavelHome.definedInstance})
			</value>
		</property>		
		<property name="searchFields">
			<value>grupoModeloDocumento:{type: suggest, properties: {length: 100, handler: grupoModeloDocumentoSuggest}}</value>
			<value>tipoModeloDocumento</value>
			<value>abreviacao</value>
			<value>ativo: {type : comboSituacao}</value>
		</property>
		<property name="order">tipoModeloDocumento</property>
	</component>
	
	<component name="tipoModeloDocumentoSearch" class="br.com.infox.ibpm.entity.TipoModeloDocumento" />	
	
</components>
