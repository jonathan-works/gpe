<components xmlns="http://jboss.com/products/seam/components" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jboss.com/products/seam/core http://jboss.com/products/seam/core-2.2.xsd                   http://jboss.com/products/seam/security http://jboss.com/products/seam/security-2.2.xsd                  http://jboss.com/products/seam/components http://jboss.com/products/seam/components-2.2.xsd">	

<!-- $Id: statusGrid.component.xml 704 2010-08-12 23:21:10Z jplacerda $ -->


	<component name="statusGrid" class="br.com.itx.component.grid.GridQuery">
		<property name="ejbql">select o from Status o</property>
		<property name="order">status</property>
		<property name="maxResults">16</property>
		<property name="gridId">status</property>
		<property name="key">idStatus</property>
		<property name="columns">
			<value>status</value>	
			<value>ativo: {valueType: ativo}</value>
			<value>mensuravel: {valueType: sim_nao}</value>			
		</property>
		<property name="restrictions">
			<value>lower(status) like concat('%',lower(#{statusSearch.status}),'%')</value>
			<value>o.ativo = #{statusSearch.ativo}</value>
			<value>o.mensuravel = #{statusSearch.mensuravel}</value>
		</property>		
		<property name="searchFields">
			<value>ativo: {type : comboSituacao}</value>
			<value>status </value>
			<value>mensuravel: {type: radioBoolean}</value>
		</property>
	</component>
	
	<component name="statusSearch" class="br.com.infox.ibpm.entity.Status" />	
	
</components>
