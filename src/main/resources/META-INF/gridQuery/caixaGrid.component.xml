<components xmlns="http://jboss.org/schema/seam/components" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jboss.org/schema/seam/core http://jboss.org/schema/seam/core-2.3.xsd                   http://jboss.org/schema/seam/security http://jboss.org/schema/seam/security-2.3.xsd                  http://jboss.org/schema/seam/components http://jboss.org/schema/seam/components-2.3.xsd">	

<!-- $Id: caixaGrid.component.xml 704 2010-08-12 23:21:10Z jplacerda $ -->


	<component name="caixaGrid" class="br.com.itx.component.grid.GridQuery">
		<property name="ejbql">select o from Caixa o </property>
		<property name="maxResults">16</property>
		<property name="gridId">caixa</property>
		<property name="key">idCaixa</property>
		
		<property name="columns">			
			<value>nomeCaixa</value>		
			<value>dsCaixa</value>	
		</property>
		
		<property name="restrictions">
			<value>o.tarefa.idTarefa = #{caixaHome.idTarefaSearch}</value>
			<value>lower(o.nomeCaixa) like concat('%', lower(#{caixaSearch.nomeCaixa}),'%')</value>
			<value>lower(o.dsCaixa) like concat('%', lower(#{caixaSearch.dsCaixa}),'%')</value>
		</property>
				
		<property name="searchFields">		
			<value>nomeCaixa</value>		
			<value>dsCaixa</value>	
		</property>
		
		<property name="order">nomeCaixa</property>
	</component>
	
	<component name="caixaSearch" class="br.com.infox.ibpm.entity.Caixa" />	
		
</components>
