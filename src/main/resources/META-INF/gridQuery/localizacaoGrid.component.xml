<components xmlns="http://jboss.com/products/seam/components" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jboss.com/products/seam/core http://jboss.com/products/seam/core-2.2.xsd                   http://jboss.com/products/seam/security http://jboss.com/products/seam/security-2.2.xsd                  http://jboss.com/products/seam/components http://jboss.com/products/seam/components-2.2.xsd">    

<!-- $Id: localizacaoGrid.component.xml 704 2010-08-12 23:21:10Z jplacerda $ -->


    <component name="localizacaoGrid" class="br.com.itx.component.grid.GridQuery">
        <property name="ejbql">select o from Localizacao o</property>
        <property name="maxResults">15</property>
        <property name="gridId">localizacao</property>
        <property name="key">idLocalizacao</property>
        <property name="columns">
            <value>localizacao: {valueType: searchTree}</value>
            <value>estrutura: { valueType: boolean }</value>                    
            <value>endereco.nomeLogradouro : { properties : { header : Logradouro } }</value> 
            <value>endereco.numeroEndereco : { properties : { header : Numero } }</value>
            <value>endereco.nomeCidade : { properties : { header : Cidade } }</value>
            <value>endereco.nomeEstado : { properties : { header : Estado } }</value>
            <value>ativo: { valueType: ativo }</value>      
        </property>
        <property name="restrictions">
        <!-- 
            Utilizando o método searchTree2GridList no Home
        -->
        </property>
        <property name="searchFields">
            <value>localizacao</value>
            <value>localizacaoPai : {type : tree , properties : { tree : localizacaoEstruturaSearchTreeHandler }}</value>
            <value>ativo: {type : comboSituacao}</value>
            <value>mostrarSomenteEstrutura : { type : radio, 
                        properties : { searchBean: 'localizacaoHome', 
                        valueList: 'true:Sim,false:Não', label: 'Mostrar Somente Estruturas'}}</value>
        </property>
        <property name="order">localizacao</property>
    </component>
    
    <component name="localizacaoSearch" class="br.com.infox.ibpm.entity.Localizacao" /> 
    
    <component name="localizacaoSearchTree" class="br.com.infox.ibpm.component.tree.LocalizacaoTreeHandler">
        <property name="iconFolder">/img/globe16.png</property>
    </component>
    
</components>
