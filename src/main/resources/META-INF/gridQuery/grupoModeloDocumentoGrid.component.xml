<components xmlns="http://jboss.com/products/seam/components" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jboss.com/products/seam/core http://jboss.com/products/seam/core-2.2.xsd                   http://jboss.com/products/seam/security http://jboss.com/products/seam/security-2.2.xsd                  http://jboss.com/products/seam/components http://jboss.com/products/seam/components-2.2.xsd">	

<!-- $Id: grupoModeloDocumentoGrid.component.xml 704 2010-08-12 23:21:10Z jplacerda $ -->


	<component name="grupoModeloDocumentoGrid" class="br.com.itx.component.grid.GridQuery">
		<property name="ejbql">select o from GrupoModeloDocumento o</property>
		<property name="maxResults">16</property>
		<property name="gridId">grupoModeloDocumento</property>
		<property name="key">idGrupoModeloDocumento</property>
		<property name="columns">
			<value>idGrupoModeloDocumento</value>
			<value>grupoModeloDocumento</value>
			<value>ativo: { valueType: ativo }</value>		
		</property>
		<property name="restrictions">
			<value>lower(to_ascii(grupoModeloDocumento)) like concat('%',lower(to_ascii(#{grupoModeloDocumentoSearch.grupoModeloDocumento})),'%')</value>
			<value>ativo = #{grupoModeloDocumentoSearch.ativo}</value>
		</property>		
		<property name="searchFields">
			<value>ativo: { type: comboSituacao }</value>
			<value>grupoModeloDocumento</value>
		</property>
		<property name="order">grupoModeloDocumento</property>
	</component>
	
	<component name="grupoModeloDocumentoSearch" class="br.com.infox.ibpm.entity.GrupoModeloDocumento" />	
	
</components>
