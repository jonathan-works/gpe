<components xmlns="http://jboss.com/products/seam/components" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jboss.com/products/seam/core http://jboss.com/products/seam/core-2.2.xsd                   http://jboss.com/products/seam/security http://jboss.com/products/seam/security-2.2.xsd                  http://jboss.com/products/seam/components http://jboss.com/products/seam/components-2.2.xsd">	

<!-- $Id: usuarioGrid.component.xml 704 2010-08-12 23:21:10Z jplacerda $ -->


	<component name="usuarioGrid" class="br.com.itx.component.grid.GridQuery">
		<property name="ejbql">select o from UsuarioLogin o</property>
		<property name="order">nome</property>
		<property name="maxResults">16</property>
		<property name="gridId">usuario</property>
		<property name="key">idPessoa</property>
		<property name="columns">
			<value>nome</value>	
			<value>bloqueio: {valueType: sim_nao}</value>			
			<value>ativo: {valueType: sim_nao}</value>			
			<value>provisorio: {valueType: sim_nao}</value>			
		</property>
		<property name="restrictions">
			<value>lower(nome) like concat(lower(#{usuarioSearch.nome}),'%')</value>
		</property>
		<property name="searchFields">
			<value>nome</value>
		</property>
	</component>
	
	<component name="usuarioSearch" class="br.com.infox.access.entity.UsuarioLogin" />	
	
</components>
