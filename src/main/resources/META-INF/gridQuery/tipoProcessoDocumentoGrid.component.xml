<components xmlns="http://jboss.com/products/seam/components" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jboss.com/products/seam/core http://jboss.com/products/seam/core-2.2.xsd                   http://jboss.com/products/seam/security http://jboss.com/products/seam/security-2.2.xsd                  http://jboss.com/products/seam/components http://jboss.com/products/seam/components-2.2.xsd">	

<!-- $Id: tipoProcessoDocumentoGrid.component.xml 707 2010-08-13 18:28:46Z rodrigo $ -->


	<component name="tipoProcessoDocumentoGrid" class="br.com.itx.component.grid.GridQuery">
		<property name="ejbql">select o from TipoProcessoDocumento o</property>
		<property name="maxResults">16</property>
		<property name="gridId">tipoProcessoDocumento</property>
		<property name="key">idTipoProcessoDocumento</property>
		<property name="columns">
			<value>tipoProcessoDocumento</value>	
			<value>inTipoDocumento:{valueType: enum}</value>
			<value>visibilidade:{valueType: enum}</value>	
			<value>ativo: { valueType: ativo }</value>
		</property>
		<property name="restrictions">
			<value>lower(tipoProcessoDocumento) like concat('%', concat (lower(#{tipoProcessoDocumentoSearch.tipoProcessoDocumento}),'%'))</value>
			<value>ativo = #{tipoProcessoDocumentoSearch.ativo}</value>
			<value>publico = #{tipoProcessoDocumentoSearch.publico}</value>
			<value>inTipoDocumento = #{tipoProcessoDocumentoSearch.inTipoDocumento}</value>
			<value>visibilidade = #{tipoProcessoDocumentoSearch.visibilidade}</value>
		</property>		
		<property name="searchFields">
			<value>ativo: {type : comboSituacao}</value>
			<value>tipoProcessoDocumento</value>	
			<value>inTipoDocumento:{type: comboEnum, properties:{items: 'tipoProcessoDocumentoHome.tipoDocumentoEnumValues'}}</value>
			<value>visibilidade:{type: comboEnum, properties:{items: 'tipoProcessoDocumentoHome.visibilidadeEnumValues'}}</value>		
			<value>publico: {type : comboBoolean}</value>
		</property>
		<property name="order">tipoProcessoDocumento</property>
	</component>
	
	<component name="tipoProcessoDocumentoSearch" class="br.com.infox.ibpm.entity.TipoProcessoDocumento" />	
	
</components>
