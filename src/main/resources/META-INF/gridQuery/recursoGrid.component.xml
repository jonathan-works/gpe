<components xmlns="http://jboss.com/products/seam/components" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jboss.com/products/seam/core http://jboss.com/products/seam/core-2.2.xsd                   http://jboss.com/products/seam/security http://jboss.com/products/seam/security-2.2.xsd                  http://jboss.com/products/seam/components http://jboss.com/products/seam/components-2.2.xsd">	


	<component name="recursoGrid" class="br.com.itx.component.grid.GridQuery">
		<property name="ejbql">select o from Papel o where identificador like '/%'</property>
		<property name="order">nome</property>
		<property name="maxResults">16</property>
		<property name="gridId">recurso</property>
		<property name="key">idPapel</property>
		<property name="columns">
			<value>nome</value>			
			<value>identificador</value>
		</property>
		<property name="restrictions">
			<value>lower(nome) like concat('%',lower(#{recursoSearch.nome}),'%')</value>
			<value>lower(identificador) like concat('%',lower(#{recursoSearch.identificador}),'%')</value>
		</property>		
		<property name="searchFields">
			<value>nome</value>	
			<value>identificador</value>
		</property>
	</component>
	
	<component name="recursoSearch" class="br.com.infox.access.entity.Papel" />	
	
</components>