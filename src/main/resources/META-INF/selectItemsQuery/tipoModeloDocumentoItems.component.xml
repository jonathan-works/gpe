	<component name="tipoModeloDocumentoItems" class="br.com.itx.component.SelectItemsQuery">
		<property name="ejbql">select t from TipoModeloDocumentoPapel tmdp
											join tmdp.tipoModeloDocumento t
											join tmdp.papel p</property>
		<property name="order">t.tipoModeloDocumento</property>
		<property name="restrictions">
			<value>p = #{usuarioLogadoLocalizacaoAtual.getPapel()}</value>
		</property>
	</component>
