<components xmlns="http://jboss.org/schema/seam/components" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jboss.org/schema/seam/core http://jboss.org/schema/seam/core-2.3.xsd                   http://jboss.org/schema/seam/security http://jboss.org/schema/seam/security-2.3.xsd                  http://jboss.org/schema/seam/components http://jboss.org/schema/seam/components-2.3.xsd">	

<!-- $Id: tipoProcessoDocumentoInternoItems.component.xml 704 2010-08-12 23:21:10Z jplacerda $ -->


	<component name="tipoProcessoDocumentoInternoItems" class="br.com.itx.component.SelectItemsQuery">
		<property name="ejbql">
			select o from TipoProcessoDocumento o 
			where o.ativo = true and (o.visibilidade = 'I' OR o.visibilidade = 'A')
		</property>
		<property name="restrictions">
			<value>(o.inTipoDocumento = #{processoDocumentoHome.modelo ? 'P' : 'D'} OR o.inTipoDocumento = 'T')</value>
		</property>
		<property name="order">o.tipoProcessoDocumento</property>

	</component>

</components>
