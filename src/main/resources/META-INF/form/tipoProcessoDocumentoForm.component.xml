<components xmlns="http://jboss.com/products/seam/components" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jboss.com/products/seam/core http://jboss.com/products/seam/core-2.2.xsd                   http://jboss.com/products/seam/security http://jboss.com/products/seam/security-2.2.xsd                  http://jboss.com/products/seam/components http://jboss.com/products/seam/components-2.2.xsd">	

<!-- $Id: tipoProcessoDocumentoForm.component.xml 707 2010-08-13 18:28:46Z rodrigo $ -->


	<component name="tipoProcessoDocumentoForm" class="br.com.itx.component.Form">
		<property name="formId">tipoProcessoDocumento</property>
		<property name="fields">
			<value>tipoProcessoDocumento: {required: true, properties: {length: 100}}</value>
			<value>codigoDocumento: {properties: {length: 30}}</value>
			<value>ativo: {required: true, type: radioSituacao}</value>
			<value>inTipoDocumento: {type: radio, properties: {valueList: "P:Texto,D:Upload,T:Todos", direction: H} }}</value>
			<value>numera : {type: numeravelMascara}</value>
			<value>tipoProcessoDocumentoObservacao: {properties: {length: 200}}</value>
			<value>visibilidade: {type: radio, properties: {valueList: "A:Ambos,I:Interno,E:Externo", direction: H} }}</value>
			<value>publico : {type: radioBoolean}</value>
			<value>anexar : {type: radioBoolean}</value>
			<value>sistema : {type: radioBoolean}</value>
			<value>agrupamento: {type: combo, properties : { items: agrupamentoItems , noSelectionLabel: 'Selecione...'} }</value>
		</property>
	</component>
</components>
