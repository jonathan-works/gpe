<components xmlns="http://jboss.com/products/seam/components"
	xmlns:core="http://jboss.com/products/seam/core"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://jboss.com/products/seam/security"
	xsi:schemaLocation="http://jboss.com/products/seam/core http://jboss.com/products/seam/core-2.2.xsd                   http://jboss.com/products/seam/security http://jboss.com/products/seam/security-2.2.xsd                  http://jboss.com/products/seam/components http://jboss.com/products/seam/components-2.2.xsd">
 
	<component name="eventoForm" class="br.com.itx.component.Form">
		<property name="formId">evento</property>
		<property name="fields">
			<value>evento: {required: true, properties: {length: 100}}</value>
			<value>observacao: {properties: {length: 200}}</value>
			<value>eventoSuperior: {type: tree, properties : {assignTo:'eventoHome.eventoSuperior', tree: eventoFormTree }}</value>
			<value>status: {type:combo, properties: {items: statusItems, optionExpression: '{status}',
													 noSelectionLabel: 'Selecione um Status'}}</value>
			<value>ativo : {required: true, type: radioSituacao, properties: {inNewLine: true}}</value>
		</property>
		<property name="buttons">treeButtons</property>
	</component>
	
	<component name="eventoFormTree" class="br.com.infox.ibpm.component.tree.EventoTreeHandler">
		<property name="iconFolder">/img/nivelAssunto.gif</property>
	</component>
</components>
