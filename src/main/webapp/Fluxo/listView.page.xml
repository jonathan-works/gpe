<?xml version="1.0" encoding="UTF-8"?>

<page xmlns="http://jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
	  login-required="true"
>
	<restrict>#{security.checkPage()}</restrict>
	<description>Fluxo: #{fluxoHome.instance}</description>
	 
	<begin-conversation join="true" flush-mode="manual"/>
	<param name="fluxo.order" value="#{fluxoGrid.order}"/>
	<param name="id" value="#{fluxoHome.fluxoIdFluxo}"/>

<!-- Parametros para RESTFull -->
	<param name="tab" value="#{fluxoHome.tab}"/>
	<param name="goBackUrl" value="#{fluxoHome.goBackUrl}"/>
	<param name="goBackId" value="#{fluxoHome.goBackId}"/>
	<param name="goBackTab" value="#{fluxoHome.goBackTab}"/>		
	<param name="fluxo" value="#{fluxoSearch.fluxo}"/>		

	<action if="#{empty fluxoHome.tab}" execute="#{fluxoHome.setTab('search')}"/>
	
	<!-- Parametros para a ordem de grids -->
	<param name="fluxo.order" value="#{fluxoGrid.order}"/>		
	<param name="processo.order" value="#{processoGrid.order}"/>		
	<param name="variavel.order" value="#{variavelGrid.order}"/>
 
</page>