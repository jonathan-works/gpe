<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
	  login-required="true"
>
	
	<restrict>#{security.checkPage()}</restrict>
	<begin-conversation join="true"/>
	<param name="id" value="#{usuarioLoginCrudAction.id}" converterId="integerConverter" />

	<param name="tab" value="#{usuarioLoginCrudAction.tab}"/>
	
	<action execute="#{usuarioPessoaFisicaCrudAction.setUsuarioAssociado(usuarioLoginCrudAction.instance)}" 
            if="#{usuarioLoginCrudAction.tab eq 'usuarioPessoaFisica'}"/>
    <action execute="#{usuarioPessoaFisicaList.setUsuario(usuarioLoginCrudAction.instance)}" 
            if="#{usuarioLoginCrudAction.tab eq 'usuarioPessoaFisica'}"/>
	
	<action execute="#{usuarioLocalizacaoAction.setUsuarioGerenciado(usuarioLoginCrudAction.instance)}" 
            if="#{usuarioLoginCrudAction.tab eq 'localizacaoUsuario'}"/>
    <action execute="#{usuarioLocalizacaoEntityList.entity.setUsuario(usuarioLoginCrudAction.instance)}" 
            if="#{usuarioLoginCrudAction.tab eq 'localizacaoUsuario'}"/>
    
    <action execute="#{bloqueioUsuarioCrudAction.setUsuarioAtual(usuarioLoginCrudAction.instance)}" 
            if="#{usuarioLoginCrudAction.tab eq 'historicoBloqueioUsuario'}"/>        
    <action execute="#{bloqueioUsuarioList.entity.setUsuario(usuarioLoginCrudAction.instance)}" 
            if="#{usuarioLoginCrudAction.tab eq 'historicoBloqueioUsuario'}"/>
            
            
</page>