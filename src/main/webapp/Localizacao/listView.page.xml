<?xml version="1.0" encoding="UTF-8"?>

<page xmlns="http://jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
	  login-required="true"
>
	<restrict>#{security.checkPage()}</restrict>
	<description>Localizacao: #{localizacaoCrudAction.instance}</description>
	
	<begin-conversation join="true" flush-mode="MANUAL"/>
	<param name="id" value="#{localizacaoCrudAction.id}" converterId="integerConverter"/>

	<param name="tab" value="#{localizacaoCrudAction.tab}"/>
	<action execute="#{itemTipoDocumentoList.entity.setLocalizacao(localizacaoCrudAction.instance)}" 
            if="#{localizacaoCrudAction.tab eq 'itemTipoDocumento'}"/>
    <action execute="#{localizacaoTipoModeloDocumentoCrudAction.setLocalizacaoAtual(localizacaoCrudAction.instance)}" 
            if="#{localizacaoCrudAction.tab eq 'itemTipoDocumento'}"/>
	
</page>