<?xml version="1.0" encoding="UTF-8"?>

<page xmlns="http://jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
	  login-required="true"
>
	<restrict>#{security.checkPage()}</restrict>
	<description>Localizacao: #{localizacaoHome.instance}</description>
	
	<begin-conversation join="true" flush-mode="MANUAL"/>
	<param name="localizacao.order" value="#{localizacaoGrid.order}"/>
	<param name="id" value="#{localizacaoHome.localizacaoIdLocalizacao}"/>

<!-- Parametros para RESTFull -->
	<param name="tab" value="#{localizacaoHome.tab}"/>
	<param name="goBackUrl" value="#{localizacaoHome.goBackUrl}"/>
	<param name="goBackId" value="#{localizacaoHome.goBackId}"/>
	<param name="goBackTab" value="#{localizacaoHome.goBackTab}"/>		
	<param name="endereco" value="#{enderecoSearch.idEndereco}"/>			
	<param name="localizacao" value="#{localizacaoSearch.localizacao}"/>		
	<param name="ativo" value="#{localizacaoSearch.ativo}"/>		

	<action if="#{empty localizacaoHome.tab}" execute="#{localizacaoHome.setTab('search')}"/>
	
	<!-- Parametros para a ordem de grids -->
	<param name="passo.order" value="#{passoGrid.order}"/>		
	<param name="processo.order" value="#{processoGrid.order}"/>		
	<param name="usuarioLocalizacao.order" value="#{usuarioLocalizacaoGrid.order}"/>		
 
</page>