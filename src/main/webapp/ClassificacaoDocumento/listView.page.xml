<?xml version="1.0" encoding="UTF-8"?>


<page xmlns="http://jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
	  login-required="true">
	  
	<restrict>#{security.checkPage()}</restrict> 
    <description>ClassificacaoDocumento: #{classificacaoDocumentoCrudAction.instance}</description>
	
	<begin-conversation join="true"/>
	<param name="id" value="#{classificacaoDocumentoCrudAction.id}" 
        converterId="integerConverter"/>

	<param name="tab" value="#{classificacaoDocumentoCrudAction.tab}"/>
    
    <action execute="#{classificacaoDocumentoPapelCrudAction.setClassificacaoDocumento(classificacaoDocumentoCrudAction.instance)}" 
            if="#{classificacaoDocumentoCrudAction.tab eq 'associarPapelTab'}"/>
    <action execute="#{classificacaoDocumentoPapelList.entity.setClassificacaoDocumento(classificacaoDocumentoCrudAction.instance)}" 
            if="#{classificacaoDocumentoCrudAction.tab eq 'associarPapelTab'}"/>
    <action execute="#{extensaoArquivoCrudAction.setClassificacaoDocumento(classificacaoDocumentoCrudAction.instance)}" 
            if="#{classificacaoDocumentoCrudAction.tab eq 'extensoesTab'}"/>
    <action execute="#{extensaoArquivoList.entity.setClassificacaoDocumento(classificacaoDocumentoCrudAction.instance)}" 
            if="#{classificacaoDocumentoCrudAction.tab eq 'extensoesTab'}"/>
    

</page>