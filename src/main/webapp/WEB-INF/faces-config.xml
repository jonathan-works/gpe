<faces-config version="2.1" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
	
	<managed-bean>
	    <managed-bean-name>currentDateTime</managed-bean-name>
	    <managed-bean-class>org.joda.time.DateTime</managed-bean-class>
	    <managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
	    <managed-bean-name>currentDate</managed-bean-name>
	    <managed-bean-class>java.util.Date</managed-bean-class>
	    <managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<application>
		<message-bundle>messages</message-bundle>
		<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>pt_BR</supported-locale>
		</locale-config>
		<system-event-listener>
			<system-event-listener-class>br.com.infox.jsf.events.EppSystemEventListener</system-event-listener-class>
			<system-event-class>javax.faces.event.PostConstructApplicationEvent</system-event-class>
		</system-event-listener>
	</application>
	<component>
		<component-type>org.richfaces.DataTable</component-type>
		<component-class>br.com.infox.jsf.workaround.UIDataTableWorkaround</component-class>
	</component>

</faces-config>
