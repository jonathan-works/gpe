<?xml version="1.0" encoding="UTF-8"?>

<page xmlns="http://jboss.org/schema/seam/pages"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
login-required="true"
>
    <begin-conversation join="true"/>
    <param name="id" value="#{consultaController.id}"/>
    <param name="tab" value="#{consultaController.tab}"/>
    <param name="idJbpm" value="#{org.jboss.seam.bpm.businessProcess.processId}" />
    <restrict>#{sigiloProcessoService.usuarioPossuiPermissao(usuarioLogado, consultaController.processo)}</restrict>
    
    <action
      execute="#{pastaAction.setProcesso(consultaController.processo)}"
      if="#{(consultaController.tab eq 'tabAnexos') || (consultaController.tab eq 'tabAnexar')}" />
    <action
      execute="#{documentoList.setProcesso(consultaController.processo)}"
      if="#{consultaController.tab eq 'tabAnexos'}" />
</page>