<?xml version="1.0" encoding="UTF-8"?>

<page xmlns="http://jboss.org/schema/seam/pages"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
login-required="true"
>

    <description>Processo: #{processoEpaHome.instance}</description>
    <begin-conversation join="true"/>

    <!-- Parametros para RESTFull -->
    <param name="tab" value="#{processoEpaHome.tab}"/>
    <param name="goBackUrl" value="#{processoEpaHome.goBackUrl}"/>
    <param name="goBackId" value="#{processoEpaHome.goBackId}"/>
    <param name="goBackTab" value="#{processoEpaHome.goBackTab}"/>
    <param name="idProcesso" value="#{processoEpaHome.processoIdProcesso}" />
    <param name="tarefaId" value="#{processoEpaHome.tarefaId}" />
    <action execute="#{processoEpaHome.iniciarTarefaProcesso()}" on-postback="false"/>
    <action execute="#{variavelProcessoAction.setProcesso(processoEpaHome.instance)}" on-postback="false"/>
    <action execute="#{relacionamentoCrudAction.setProcesso(processoEpaHome.instance.numeroProcesso)}" if="#{processoEpaHome.tab eq 'relacionamentoProcessoTab'}"/>
    <action execute="#{consultaController.setProcesso(processoEpaHome.instance)}" if="#{processoEpaHome.tab eq 'tabMovimentacoes'}"/>
	<action execute="#{pastaAction.setProcesso(processoEpaHome.instance)}" if="#{(processoEpaHome.tab eq 'tabAnexos') || (processoEpaHome.tab eq 'tabAnexar')}" />
    <action execute="#{documentoList.setProcesso(processoEpaHome.instance)}" if="#{processoEpaHome.tab eq 'tabAnexos'}" />
</page>