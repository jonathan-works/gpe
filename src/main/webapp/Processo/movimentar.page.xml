<?xml version="1.0" encoding="UTF-8"?>

<page xmlns="http://jboss.org/schema/seam/pages"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
login-required="true"
>

    <description>Processo: #{processoHome.instance}</description>
    <begin-conversation join="true"/>

    <!-- Parametros para RESTFull -->
    <param name="tab" value="#{processoHome.tab}"/>
    <param name="goBackUrl" value="#{processoHome.goBackUrl}"/>
    <param name="goBackId" value="#{processoHome.goBackId}"/>
    <param name="goBackTab" value="#{processoHome.goBackTab}"/>
    <param name="idProcesso" value="#{processoHome.processoIdProcesso}" />
    <param name="tarefaId" value="#{processoHome.tarefaId}" />
    <action execute="#{processoHome.iniciarTarefaProcesso()}" if="#{not util.ajaxRequest}"/>
    <action execute="#{processoDocumentoEditor.setProcesso(processoHome.instance)}" if="#{processoHome.tab eq 'tabAnexar2'}"/>
    <action execute="#{variavelProcessoAction.setProcesso(processoHome.instance)}" on-postback="false"/>

</page>