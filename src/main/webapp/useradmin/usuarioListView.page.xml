<?xml version="1.0" encoding="UTF-8"?>

<page xmlns="http://jboss.org/schema/seam/pages"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="
      http://jboss.org/schema/seam/pages
      http://jboss.org/schema/seam/pages-2.3.xsd"
   login-required="true">

	<restrict>#{security.checkPage()}</restrict>

	<action execute="#{userSearch.loadUsers}"/>
	
	<param name="id" value="#{usuarioLoginHome.usuarioId}"/>
	<param name="tab" value="#{usuarioLoginHome.tab}"/>
	
  	<action if="#{usuarioLoginHome.tab == 'search'}" execute="#{componenteHome.newInstance()}"/>

</page>