<?xml version="1.0" encoding="UTF-8"?>

<page xmlns="http://jboss.org/schema/seam/pages"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="
      http://jboss.org/schema/seam/pages
      http://jboss.org/schema/seam/pages-2.3.xsd"
   login-required="true">

	<begin-conversation join="true"/>
	<restrict>#{security.checkPage()}</restrict>

	<param name="id" value="#{papelHome.papelId}"/>
	<param name="tab" value="#{papelHome.tab}"/>
	<action if="#{papelHome.tab == 'search'}" execute="#{papelHome.newInstance()}"/>
	
</page>