<page xmlns="http://www.jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.jboss.org/schema/seam/pages http://www.jboss.org/schema/seam/pages-2.3.xsd">

	<action execute="#{authenticator.unAuthenticate()}" />

   <navigation from-action="#{identity.login}">
      <rule if="#{identity.loggedIn and !usuarioLogado.provisorio}">
         <redirect view-id="/home.xhtml"/>
      </rule>
      <rule if="#{identity.loggedIn and usuarioLogado.provisorio}">
         <redirect view-id="/trocarSenha.xhtml"/>
      </rule>      
   </navigation>

</page>
