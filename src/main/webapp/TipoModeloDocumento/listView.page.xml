<?xml version="1.0" encoding="UTF-8"?>

<page xmlns="http://jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
	  login-required="true"
>
	<restrict>#{security.checkPage()}</restrict>
	<description>TipoModeloDocumento: #{tipoModeloDocumentoHome.instance}</description>
	
	<begin-conversation join="true"/>
	<param name="id" value="#{tipoModeloDocumentoCrudAction.id}" converterId="integerConverter"/>

	<param name="tab" value="#{tipoModeloDocumentoCrudAction.tab}"/>
	<!-- <action if="#{param.newInstance == 'true'}" execute="#{variavelHome.newInstance()}"/> -->
	<!-- Parametros para a ordem de grids -->
	
	
	<action execute="#{associatedVariavelTipoModeloList.entity.setTipoModeloDocumento(tipoModeloDocumentoCrudAction.instance)}" 
            if="#{tipoModeloDocumentoCrudAction.tab eq 'variaveis'}"/>
    <action execute="#{associativeVariavelList.setTipoModeloToIgnore(tipoModeloDocumentoCrudAction.instance)}" 
            if="#{tipoModeloDocumentoCrudAction.tab eq 'variaveis'}"/>
    <action execute="#{tipoModeloDocumentoVariavelCrudAction.setTipoModeloDocumentoAtual(tipoModeloDocumentoCrudAction.instance)}" 
            if="#{tipoModeloDocumentoCrudAction.tab eq 'variaveis'}"/>
            
            
    <action execute="#{tipoModeloDocumentoPapelCrudAction.setTipoModeloDocumentoAtual(tipoModeloDocumentoCrudAction.instance)}" 
            if="#{tipoModeloDocumentoCrudAction.tab eq 'papeis'}"/>
    <action execute="#{tipoModeloDocumentoPapelList.entity.setTipoModeloDocumento(tipoModeloDocumentoCrudAction.instance)}" 
            if="#{tipoModeloDocumentoCrudAction.tab eq 'papeis'}"/>
 
</page>